		--s-bracket-border: #58a6ff99
		--s-bracket-fg1: #79c0ff
		--s-bracket-fg2: #e3b341
		--s-bracket-fg3: #fdac54
		--s-bracket-fg4: #d2a8ff
		--s-bracket-fg5: #8b949e
		--s-comment: #8b949e
		--s-constant: #ec8e2c
		--s-entity: #79c0ff
		--s-export: #fdac54
